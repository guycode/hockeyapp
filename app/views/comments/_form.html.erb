<h3>Post a Comment</h3>
<%= form_for [ @article, @comment ] do |f| %>
  <p>
    <%= f.label :author_name %> <br/>
    <%= f.text_field :author_name, :value => "Your Name" %>
  </p>
  <p>
    <%= f.label :body %><br/>
    <%= f.text_area :body, :value => "Your Comments" %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>